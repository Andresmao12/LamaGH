@page "/admin/stats"
@using System.Text.Json;
@using LamaApp.Client.Pages.Admin.Layout
@using LamaApp.Shared
@using LamaApp.Client.Services.Capitulos
@using LamaApp.Client.Services.Admin
@using LamaApp.Client.Services.Usuario;
@layout AdminLayout

@inject HttpClient httpClient
@inject ICapituloService capituloService
@inject IAdminService adminloService


<div class="flex-grow-1 p-4">
    <h2 class="h2 mb-4">Estadisticas</h2>

    <div class="row">
        @* datos relevantes *@
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Miembros</h5>
                    <p class="card-text display-4">@estadisticas.TotalUsuarios</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Capítulos</h5>
                    <p class="card-text display-4">@estadisticas.TotalCapitulos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Eventos</h5>
                    <p class="card-text display-4">@totalEvents</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Eventos Este Mes</h5>
                    <p class="card-text display-4">@eventsThisMonth</p>
                </div>
            </div>
        </div>

       @* Graficas o maximos *@
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Capítulos con Más Eventos</h5>
                    <div id="chaptersEventsChart" style="height: 300px;">

                        @* Añadir mas contenido o cambiar por alguna grafica *@
                        @estadisticas.CapituloConMasUsuarios

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Capítulos con Más Miembros</h5>
                    <div id="chaptersMembersChart" style="height: 300px;">

                        @* Añadir mas contenido o cambiar por alguna grafica *@
                        @estadisticas.CapituloConMasUsuarios

                    </div>
                </div>
            </div>
        </div>
        
        @* Actividad reciente o  datos importantes *@
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Actividad Reciente</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Capítulo</th>
                                <th>Actividad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in recentActivities)
                            {
                                <tr>
                                    <td>@activity.Date.ToShortDateString()</td>
                                    <td>@activity.Chapter</td>
                                    <td>@activity.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@code {

    private Estadisticas estadisticas = new Estadisticas();

    protected override async Task OnInitializedAsync()
    {
        try
        {

            estadisticas = await adminloService.getStats();

        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener capítulos: {ex.Message}");
        }
    }


    // Obtenemos estadisticas





    private List<RecentActivity> recentActivities = new List<RecentActivity>
    {
        new RecentActivity { Date = DateTime.Now.AddDays(-1), Chapter = "LAMA Madrid", Description = "Nuevo evento creado: 'Taller de Networking'" },
        new RecentActivity { Date = DateTime.Now.AddDays(-2), Chapter = "LAMA Barcelona", Description = "5 nuevos miembros se unieron" },
        new RecentActivity { Date = DateTime.Now.AddDays(-3), Chapter = "LAMA Valencia", Description = "Evento completado: 'Charla sobre Liderazgo'" },
        new RecentActivity { Date = DateTime.Now.AddDays(-4), Chapter = "LAMA Sevilla", Description = "Nuevo capítulo creado" },
        new RecentActivity { Date = DateTime.Now.AddDays(-5), Chapter = "LAMA Bilbao", Description = "Actualización de información del capítulo" }
    };

    private int totalEvents => 245;
    private int eventsThisMonth = 15; 
   



    private class RecentActivity
    {
        public DateTime Date { get; set; }
        public string Chapter { get; set; }
        public string Description { get; set; }
    }
}

