@page "/register"
@using LamaAppVS.Client.Pages.Layout
@using LamaAppVS.Shared.Models;
@* @using LamaAppVS.Client.Pages.HomeWithout.Components *@
@layout MainLayout

<div class="container my-5">
    <div class="row">
        <div class="col-10">
            <h2 class="text-uppercase">Latin American Motorcycles Assoc.</h2>
            <p>Formulario de Membresía</p>
        </div>
        <div class="col-2 d-flex justify-content-end align-items-start gap-2">
            <button class="btn btn-outline-dark" onclick="window.location.href = '/login'">Login</button>
            <button class="btn btn-outline-danger" onclick="window.location.href = '/'"><i class="fa-solid fa-house"></i></button>
        </div>
    </div>

    <EditForm FormName="formRegister" Model="@user" OnSubmit="HandleFormSubmit">
    <h4>Cuenta</h4>
    <div class="row mb-3">
        <div class="col">
            <label for="usuario" class="form-label">Nombre de usuario</label>
            <InputText type="text" class="form-control" id="usuario" placeholder="Usuario" @bind-Value = "user.Nombre_Usuario" />
        </div>
        <div class="col">
            <label for="capitulo" class="form-label">Capitulo</label>
                <select @bind="@user.ID_Capitulo" class="form-select" id="capitulo">
                    <option value="user.Capitulo">Seleccione un capítulo</option> 
                    @* Capitulos sera donde se almacenara el nombre de los caps traidos de la bd
                        @foreach (var capitulo in capitulos)
                    {
                        <option value="@capitulo.ID_Capitulo">@capitulo.Nombre</option>
                    } *@
                </select>
            </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label for="contrasena" class="form-label">Contraseña</label>
                <InputText type="password" class="form-control" id="contrasena" placeholder="Contraseña" @bind-Value="@user.Contraseña" />
        </div>
        <div class="col">
            <label for="contrasena" class="form-label">Confirmar contraseña</label>
                
        </div>
    </div>

    <h4>Datos Personales</h4>

        <div class="row mb-3">
            <div class="col">
                <label for="nombres" class="form-label">Nombres</label>
                <InputText type="text" class="form-control" id="nombres" placeholder="Nombres" @bind-Value="@user.Nombre" />
            </div>
            <div class="col">
                <label for="apellidos" class="form-label">Apellidos</label>
                <InputText type="text" class="form-control" id="apellidos" placeholder="Apellidos" @bind-Value="@user.Apellido" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="identificacion" class="form-label">Identificacion</label>
                <InputText type="text" class="form-control" id="identificacion" placeholder="Número de Identificación" @bind-Value="@user.Cedula" />
            </div>
            <div class="col">
                <label for="tipo" class="form-label">Tipo de documento</label>
                <select class="form-select" id="tipo">
                    <option selected>Seleccione</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            
           
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="fechaNacimiento" class="form-label">Fecha Nacimiento</label>
                <InputText type="date" class="form-control" id="fechaNacimiento" @* @bind-Value="@user.Fecha_Nacimiento.ToString" *@ />
            </div>
            <div class="col">
                <label for="lugar" class="form-label">Lugar</label>
                <InputText type="text" class="form-control" id="lugar" placeholder="Lugar de nacimiento" />
            </div>
        </div>
        <div class="mb-3">
            <label for="direccionResidencia" class="form-label">Dirección Residencia</label>
            <InputText type="text" class="form-control" id="direccionResidencia" placeholder="Dirección de residencia" @* @bind-Value="@user.Direccion" *@ />
        </div>

        <div class="row mb-3">
            <div class="col">
                <label for="telefonoResidencia" class="form-label">Teléfono Residencia</label>
                <InputText type="text" class="form-control" id="telefonoResidencia" placeholder="Teléfono de residencia" @* @bind-Value="@user.Telefono" *@ />
            </div>

            <div class="col">
                <label for="celular" class="form-label">Celular</label>
                <InputText type="text" class="form-control" id="celular" placeholder="Número de celular" @bind-Value="@user.Contacto.Celular" />
            </div>
        </div>

        <h4>Datos Familiares</h4>
        
        <div class="row mb-3">
            <div class="col">
                <label for="nombrePareja" class="form-label">Nombre de la Pareja</label>
                <InputText type="text" class="form-control" id="nombrePareja" placeholder="Nombre de la pareja" @* @bind-Value="@user.Nombre" *@ />
            </div>

            <div class="col">
                <label for="identificacionPareja" class="form-label">Numero de identificación</label>
                <InputText type="text" class="form-control" id="identificacionPareja" placeholder="ID de la pareja" @* @bind-Value="@user.Nombre"  *@/>
            </div>  
        </div>


        <h4>Datos de Vehículo Actual</h4>
        <div class="row mb-3">
            <div class="col">
                <label for="marcaMoto" class="form-label">Marca de Moto</label>
                <InputText type="text" class="form-control" id="marcaMoto" placeholder="Marca de Moto" @* @bind-Value="@user.Motocicletas.Marca" *@ />
            </div>
            <div class="col">
                <label for="modeloMoto" class="form-label">Modelo</label>
                <InputText type="text" class="form-control" id="modeloMoto" placeholder="Modelo" @* @bind-Value="@user.Motocicletas.Marca" *@ />
            </div>
            <div class="col">
                <label for="anoMoto" class="form-label">Año</label>
                <InputText type="text" class="form-control" id="anoMoto" placeholder="Año" @* @bind-Value="@user.Motocicletas.Marca" *@ />
            </div>
        </div>

        <div class="row">
            <button class="col-6 offset-3 btn btn-dark shadow-sm my-4">Send</button>
        </div>


    </EditForm>
</div>

@code {
    [SupplyParameterFromForm(FormName = "formRegister")]
    public Usuario user { get; set; } = new Usuario();


    private async Task HandleFormSubmit()
    {
        // Lógica de envío del formulario
    }

}
