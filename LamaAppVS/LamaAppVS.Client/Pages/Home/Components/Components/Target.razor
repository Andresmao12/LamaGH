<div class="target-cont position-relative">
    <img src="Imagenes/montaña.jpg" class="position-absolute top-0 z-0 imagen-gap image-cover rounded-3"/>
    <div class="z-1 d-flex position-relative flex-column w-full h-full justify-content-end text-white p-2">
        <h2>@Capitulo</h2>
        <span>Epsiodio @Episodio</span>
    </div>

</div>

<style>

    .target-cont{
        cursor : pointer;
    }

    .target-cont:hover{
            transform: scale(1.04);
            transition : 200ms;
    }

</style>

@code {
    [Parameter]
    public string Capitulo { get; set; } = "...";

    [Parameter]
    public string Episodio { get; set; } = "...";
}
