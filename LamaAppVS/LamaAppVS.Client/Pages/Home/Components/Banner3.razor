    <div class="sliderCont d-flex flex-row position-relative w-100 h-100 px-5 py-1">
        <div class="slider_img img1 bg-danger"> <h1>Medellin</h1></div>
        <div class="slider_img img2 bg-dark "><h1>Medellin</h1></div>
        <div class="slider_img img3 bg-danger "><h1>Medellin</h1></div>
